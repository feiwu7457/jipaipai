/* pages/result/result.wxss */
.head {
  background-color: #3ACF6D;
  padding: 30px 0 60rpx;

}
.head-title {
  padding-left: 30rpx;
}

.personal {
  padding: 30rpx;
  display: flex;
  align-items: center;
  /* background-color: #ffffff; */

}
.personal-headimg {
  width: 110rpx;
  height: 110rpx;
  margin-right: 20rpx;
  border-radius: 50%;

}
.personal .user-member {
  color: #ffffff;
}

.personal .user-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.info-left {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}


.sub-wrap {
  margin: 20rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-top: 0rpx;
}
.sub-wrap .title {
  padding: 20rpx;
  font-size: 28rx;
  font-weight: bold;
  border-bottom: 1px solid #e5e5e5;
}
.sub-item {
  padding: 30rpx;
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-bottom: 1px solid #e5e5e5;

}
.sub-item .user-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.user-nickname {
  font-size: 30rpx;
  font-weight: bold;
}
.user-member {
  font-size: 26rpx;
  color: #999999;
}
.info-right {
  font-size: 26rpx;
  font-weight: bold;
}


.orders-box {
    position: absolute;
    top: 310rpx;
    /* margin-top: 10rpx; */
    bottom: 0;
    left: 0;
    right: 0;
    overflow: auto;
    -webkit-overflow-scrolling: touch;
    /* height: 840rpx; */
}

.emptyDataBox{
  display: flex;
  justify-content: center;
  padding-bottom: 200rpx;
  flex-direction: column;
  align-items: center;
}
.emptyDataBox image{
  width: 100%;
  height: 380rpx;
}